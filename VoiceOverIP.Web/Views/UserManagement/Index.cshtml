@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of User</h2>

<div ng-app="voipApp" ng-controller="userCtrl">


    <div class="row">

        <div class="col-lg-12">

            <form ng-submit="sendPost()">
                
                <div class="row">
                    <div class="col-lg-6" style="text-align: left">
                        First Name <br/>
                        <input ng-model="firstname" class="input-lg"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6" style="text-align: left">
                        Last Name <br/>
                        <input ng-model="lastname" class="input-lg"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6" style="text-align: left">
                        Email <br/>
                        <input ng-model="email" class="input-lg"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6" style="text-align: left">
                        <button type="submit" class="btn">Send</button>
                    </div>
                </div>


            </form>
        </div>

    </div>


    <div class="row" style="padding-top: 50px">

        <div class="col-lg-12">
            <table class="table-striped" style="width: 100%" >
                <tr>
                    <th>
                        First Name
                    </th>

                    <th>
                        Last Name
                    </th>

                    <th>
                        Email
                    </th>
                </tr>
                <tr ng-repeat="x in users">
                    <td>{{ x.firstname }}</td>
                    <td>{{ x.lastname }}</td>
                    <td>{{ x.email }}</td>
                </tr>
            </table>

        </div>

    </div>


</div>


<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
<script src="~/Scripts/site.js"></script>